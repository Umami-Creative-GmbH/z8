{
  "name": "z8",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "msgpackr-extract",
      "msw"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "dev:webapp": "turbo dev --filter=webapp",
    "dev:desktop": "turbo dev --filter=desktop",
    "dev:mobile": "turbo dev --filter=mobile",
    "build:webapp": "turbo build --filter=webapp",
    "build:desktop": "turbo build --filter=desktop",
    "build:mobile": "turbo build --filter=mobile",
    "dev:docs": "turbo dev --filter=docs",
    "build:docs": "turbo build --filter=docs",
    "docker:up": "docker compose -f deploy/compose/docker-compose.yml up -d",
    "docker:down": "docker compose -f deploy/compose/docker-compose.yml down",
    "docker:logs": "docker compose -f deploy/compose/docker-compose.yml logs -f",
    "docker:ps": "docker compose -f deploy/compose/docker-compose.yml ps",
    "docker:build": "docker build --target webapp -t z8-webapp:latest .",
    "docker:build:webapp": "docker build --target webapp -t z8-webapp:latest .",
    "docker:build:worker": "docker build --target worker -t z8-worker:latest .",
    "docker:build:migration": "docker build --target migration -t z8-migration:latest .",
    "docker:build:seed": "docker build --target db-seed -t z8-db-seed:latest .",
    "docker:build:all": "docker build --target webapp -t z8-webapp:latest . && docker build --target worker -t z8-worker:latest . && docker build --target migration -t z8-migration:latest . && docker build --target db-seed -t z8-db-seed:latest .",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f"
  },
  "devDependencies": {
    "@esbuild/win32-x64": "^0.27.2",
    "puppeteer-core": "^24.36.0",
    "shadcn": "^3.7.0",
    "turbo": "^2.7.5"
  },
  "packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48",
  "overrides": {
    "pako": "1.0.11"
  }
}
